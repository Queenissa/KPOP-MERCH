<title>Add Product</title>
<link rel="stylesheet" href="/public/css/add-product.css">

<body>
    <%- include('./../partials/adminHeader') -%>    
    
        <div class="container d-flex justify-content-center">
            <div class="row">
                <div class="col-md-12 mx-5 mt-5">
                    <div class="form-group col-md-12 ">
                        <label for="">Title</label>
                        <input type="text" class="form-control" name="title" id="title" placeholder="Title" >
                    </div> 

                    <div class="form-group col-md-12">
                        <label for="">Image URL</label>
                        <input type="text" class="form-control" name="imageUrl" id="iamgeUrl" placeholder="Image URL" >
                    </div>

                    <div class="form-group col-md-12">
                        <label for="">Price</label>
                        <input type="number" class="form-control" name="price" id="price" placeholder="Price" >
                    </div>

                    <div class="form-group col-md-12">
                        <label for="">Stock</label>
                        <input type="number" class="form-control" name="stock" id="stock" placeholder="Stock" >
                    </div>

                        <div class="form-group col-md-12">
                        <label for="">Category</label>
                        <select name="" class="form-control" id="category">
                            <option value="">Select Category</option>
                            <option value="bts">BTS</option>
                            <option value="blackpink">Blackpink</option>
                            <option value="exo">EXO</option>
                            <option value="twice">Twice</option>
                            <option value="redvelvet">Redvelvet</option>
                            <option value="momoland">Momoland</option>
                        </select>
                    </div>

                    <div class="form-group col-md-12">
                        <label for="">Product Description</label>
                        <textarea class="form-control" id="description" placeholder="product description" cols="30" rows="5" style="resize: none"></textarea>
                    </div>
                </div>
                <div class="form-group w-100">
                    <button class="btn btn-success px-5 py-2 my-3 ml-5 float-right" id="saveProduct">Save</button>
                    <button class="btn btn-danger px-5 py-2 my-3 ml-5 float-right">Cancel</button>
                </div>
            </div>
        </div>
    
    <%- include('./../partials/footer') -%>
</body>