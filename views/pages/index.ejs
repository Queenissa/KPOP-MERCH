<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta category="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <link rel="stylesheet" href="/public/css/index.css">
  <link href='https://fonts.googleapis.com/css?family=Kavoon' rel='stylesheet'>
</head>

<body>
  <% if (user) { %>
    <% if (user.role == "admin") { %>
      <%- include('./../partials/adminHeader') -%>
    <% } else { %>
      <%- include('./../partials/userHeader') -%>
    <% } %>    
  <% } else {%>
    <%- include('./../partials/header') -%>
  <% } %>

  <!-- Carousel -->
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/public/images/blackpink.PNG" style="height:600px" alt="First slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/public/images/bts.PNG" style="height: 600px" alt="Second slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/public/images/twice.PNG" style="height: 600px" alt="Third slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/public/images/exo.PNG" style="height: 600px" alt="Fourth slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/public/images/redVelvet.PNG" style="height: 600px" alt="Fifth slide">
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/public/images/momoland.PNG" style="height: 600px" alt="Sixth slide">
      </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
  <!-- Categories -->
  <div class="container mt-5">
    <div class="topnav">
      <a style="text-decoration:none;">Categories</a>
      <div class="search-container">
        <form action="">
          <input type="text" placeholder="Search.." id="searchInput" name="search" autocomplete="off">
          <button type="submit"><i class="fa fa-search"></i></button>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="" role="toolbar">
        <div class="btn mx-auto mt-3" role="button">
          <button type="button" class="btn" id="categoryButton"><a href="http://localhost:5000/categories/blackpink">BLACKPINK</a></button>
        </div>
        <div class="btn mx-auto mt-3 " role="button">
          <button type="button" class="btn " id="categoryButton"><a href="http://localhost:5000/categories/bts">BTS</a></button>
        </div>
        <div class="btn mx-auto mt-3" role="button">
          <button type="button" class="btn " id="categoryButton"><a href="http://localhost:5000/categories/twice">TWICE</a></button>
        </div>
        <div class="btn mx-auto mt-3" role="button">
          <button type="button" class="btn " id="categoryButton"><a href="http://localhost:5000/categories/exo">EXO</a></button>
        </div>
        <div class="btn mx-auto mt-3" role="button">
          <button type="button" class="btn " id="categoryButton"><a href="http://localhost:5000/categories/redvelvet">RED VELVET</a></button>
        </div>
        <div class="btn mx-auto mt-3" role="button">
          <button type="button" class="btn " id="categoryButton"><a href="http://localhost:5000/categories/momoland">MOMOLAND</a></button>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <h3 class="my-4">Top Selling Products</h3>
    <div class="card-deck">
      <div class="card text-center">
        <img class="card-img-top" src="/public/images/bag.jpg" alt="Card image">
        <div class="card-body">
            <h5 class="name">EXO Bag</h5><h6>₱500</h6>
        </div>
      </div>
      <div class="card text-center">
        <img class="card-img-top" src="/public/images/bpshirt.jpg" alt="Card image">
        <div class="card-body">
            <h5 class="name">Blink T-Shirt</h5><h6>₱300</h6>
        </div>
      </div>
      <div class="card text-center">
        <img class="card-img-top" src="/public/images/cap.jpg" alt="Card image">
        <div class="card-body">
            <h5 class="name">Twice Cap</h5><h6>₱400</h6>
        </div>
      </div>
      <div class="card text-center">
        <img class="card-img-top" src="/public/images/shoes.jpg" alt="Card image">
        <div class="card-body">
            <h5 class="name">BTS Shoes</h5><h6>₱350</h6>
        </div>
      </div>
      <div class="card text-center">
        <img class="card-img-top" src="/public/images/jacket.jpg" alt="Card image">
        <div class="card-body">
            <h5 class="name">Momoland Jacket</h5><h6>₱250</h6>
        </div>
      </div>
      <div class="card text-center">
        <img class="card-img-top" src="/public/images/lightstick.png" alt="Card image">
        <div class="card-body">
            <h5 class="name">K-POP Lightsticks</h5><h6>₱800</h6>
        </div>
      </div>
    </div>
  </div>
  </div>
</div>
  <%- include('./../partials/footer') -%>
</body>

</html>